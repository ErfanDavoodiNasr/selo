RewriteEngine On

# Preserve Authorization header on Apache/cPanel setups
RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

<IfModule mod_headers.c>
    <FilesMatch "\.(?:css|js|svg|png|jpe?g|gif|webp|woff2?|ttf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    <Files "sw.js">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
    </Files>
</IfModule>

# Block access to sensitive directories
RewriteRule ^(config|storage|app|database|signaling)(/|$) - [F]

# Serve public assets directly from /public
RewriteRule ^assets/(.*)$ public/assets/$1 [L,NC]

# Allow existing files/directories (e.g. /install, /photo.php)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Route all other requests to the root front controller
RewriteRule ^ index.php [L]
